# AI Automation Platform Environment Configuration
# Copy this file to .env and update the values

# Database Configuration
DATABASE_URL=postgresql://ai_automation:secure_password_2024@localhost:5432/ai_automation

# Redis Configuration
REDIS_URL=redis://:secure_redis_2024@localhost:6379/0

# API Keys - REQUIRED
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here

# Stripe Payment Configuration - OPTIONAL
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Cryptocurrency Configuration - OPTIONAL
CRYPTO_BITCOIN_ADDRESS=your-bitcoin-address
CRYPTO_ETHEREUM_ADDRESS=your-ethereum-address
WEB3_PROVIDER_URL=https://mainnet.infura.io/v3/your-project-id

# Security Configuration
SECRET_KEY=your-super-secret-key-minimum-32-characters-long
API_TOKEN=your-api-token-for-authentication

# Application Settings
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=info

# Vector Memory Configuration
VECTOR_EMBEDDING_MODEL=sentence-bert
VECTOR_MAX_MEMORIES=10000
VECTOR_SIMILARITY_THRESHOLD=0.5

# LLM Configuration
OLLAMA_ENABLED=false
OLLAMA_ENDPOINT=http://localhost:11434
QWEN_ENABLED=false
TRANSFORMERS_CACHE_DIR=./models

# Insights Engine Configuration
INSIGHTS_CACHE_TTL_HOURS=24
INSIGHTS_ANOMALY_THRESHOLD=0.1
INSIGHTS_FORECAST_DAYS=90

# Policy Engine Configuration
POLICY_CONFIG_PATH=./config/policies.yaml

# Review Queue Configuration
REVIEW_QUEUE_DEFAULT_PRIORITY=medium
REVIEW_QUEUE_DEFAULT_DUE_HOURS=24

# Background Jobs Configuration
CELERY_BROKER_URL=redis://:secure_redis_2024@localhost:6379/0
CELERY_RESULT_BACKEND=redis://:secure_redis_2024@localhost:6379/0

# Monitoring Configuration
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true

# External APIs
EXCHANGE_RATE_API_KEY=your-exchange-rate-api-key
BLOCKCHAIN_API_KEY=your-blockchain-api-key

# File Storage
STORAGE_TYPE=local
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=your-s3-bucket-name
AWS_REGION=us-east-1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@yourcompany.com

# Notification Settings
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/slack/webhook
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your/discord/webhook

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080,https://yourfrontend.com

# Session Configuration
SESSION_EXPIRE_HOURS=24
SESSION_COOKIE_SECURE=false  # Set to true in production with HTTPS

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30